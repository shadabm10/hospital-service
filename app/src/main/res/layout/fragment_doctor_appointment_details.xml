<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBF8F5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_doctorappoitment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/ll_mainlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:src="@drawable/patient_photo" />

                        <com.rootscare.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:text="Dr. Mark Pierce"
                            android:id="@+id/tvDoctorName"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Patient Name : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customview.MyTextView
                                android:id="@+id/txt_patient_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Booking Date : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customview.MyTextView
                                android:id="@+id/txt_booking_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Address : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:text="5835 LEHMAN DR,Colorado Springs Kolkata,700156"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phone Number : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:id="@+id/tvPhoneNumber"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Appointment Date : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customview.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:id="@+id/tvAppointmentDate"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:orientation="vertical"
                            android:id="@+id/llAboutSymptoms"
                            android:visibility="visible">

                            <com.rootscare.customview.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About Symptom :"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/llRecording"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/img_play"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/play" />

                                <com.rootscare.customview.MyTextView
                                    android:id="@+id/txt_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:text="00:30"
                                    android:textSize="@dimen/_12sdp" />

                                <SeekBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_toStartOf="@+id/txt_time"
                                    android:layout_toEndOf="@+id/img_play"
                                    android:src="@drawable/recording_line" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/llOrPortion"
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/txt_or_bg" />


                            </RelativeLayout>

                            <com.rootscare.customview.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/tvSymptoms"
                                android:visibility="gone"
                                android:text="Weakness and Aches in Muscles and Joints"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>

                        <com.rootscare.customview.MyCustomButton
                            android:id="@+id/btn_rootscare_doctor_consulting"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Consultation"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone"
                            android:background="@drawable/appiontment_bg">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="@dimen/dimen_10dp">

                                <com.rootscare.customview.MyCustomButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentStart="true"
                                    android:background="@drawable/rounded_green_btn"
                                    android:text="Accept"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customview.MyCustomButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/rounded_white_btn"
                                    android:text="Reject"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10ssp" />
                            </RelativeLayout>


                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>