<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/common_bg"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="vertical">
            <com.rootscare.customview.MyCustomButton
                android:id="@+id/btn_doctor_upcomming_appointment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/booking_new_bg"
                android:drawableEnd="@drawable/white_arrow_circle"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="Upcoming Appointment"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />
            <com.rootscare.customview.MyCustomButton
                android:id="@+id/btn_doctor_todays_appointment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/booking_new_bg"
                android:drawableEnd="@drawable/white_arrow_circle"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="Todays Appointment"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />
            <com.rootscare.customview.MyCustomButton
                android:id="@+id/btn_doctor_requested_appointment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/booking_new_bg"
                android:drawableEnd="@drawable/white_arrow_circle"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="Request Appointment"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

    </RelativeLayout>
</layout>