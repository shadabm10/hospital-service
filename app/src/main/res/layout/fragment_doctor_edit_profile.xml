<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBF8F5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/img_doctor_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"  />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/img_doctor_profile"
                        android:orientation="vertical">

                        <com.rootscare.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/textViewDocNameTilte"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <com.rootscare.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text=""
                            android:id="@+id/textViewDocEmailTilte"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.rootscare.customview.MyCustomButton
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edit_profile_btn_bg"
                            android:text="Edit Profile"
                            android:textAllCaps="false"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_8ssp"
                            android:visibility="gone" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdview_appoitment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/ll_mainlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="First Name"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/ediitextFirstName"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Last Name"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/ediitextLastName"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/calendar_month"
                                    android:hint="Date of Birth"
                                    android:background="@null"
                                    android:id="@+id/textViewDOB"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Email"
                                    android:inputType="textEmailAddress"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/ediitextEmail"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                                <!--android:drawableEnd="@drawable/new_down_arrow"-->

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Mobile Number"
                                    android:inputType="phone"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/ediitextMobileNumber"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:id="@+id/radioYesOrNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radioBtnMale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Male"
                                        android:textColor="@color/txt_color"
                                        android:textSize="@dimen/_10ssp" />

                                    <RadioButton
                                        android:id="@+id/radioBtnFemale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="Female"
                                        android:textColor="@color/txt_color"
                                        android:textSize="@dimen/_10ssp" />

                                    <RadioButton
                                        android:id="@+id/radioBtnOther"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="Other"
                                        android:textColor="@color/txt_color"
                                        android:textSize="@dimen/_10ssp" />
                                </RadioGroup>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Qualification"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/ediitextQualification"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Passing year"
                                    android:drawableEnd="@drawable/new_down_arrow"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/textViewPassingYear"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Institute"
                                    android:lines="1"
                                    android:background="@null"
                                    android:id="@+id/ediitextInstitute"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Description"
                                    android:lines="2"
                                    android:background="@null"
                                    android:id="@+id/ediitextDescription"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Experience"
                                    android:lines="1"
                                    android:inputType="number"
                                    android:background="@null"
                                    android:id="@+id/ediitextExperience"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Available Time"
                                    android:lines="1"
                                    android:inputType="number"
                                    android:background="@null"
                                    android:id="@+id/ediitexAvailableTime"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Fees"
                                    android:lines="1"
                                    android:inputType="numberDecimal"
                                    android:background="@null"
                                    android:id="@+id/ediitextFees"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.rootscare.customview.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Department"
                                    android:drawableEnd="@drawable/new_down_arrow"
                                    android:maxLines="2"
                                    android:minLines="1"
                                    android:background="@null"
                                    android:id="@+id/textViewDepartment"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.rootscare.customview.MyTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:hint="Upload Certificate"
                                        android:layout_weight="0.95"
                                        android:lines="1"
                                        android:background="@null"
                                        android:id="@+id/textViewCertificate"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/txt_color"
                                        android:textSize="@dimen/_10ssp" />

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.05"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/upload_image"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>



                            <com.rootscare.customview.MyCustomButton
                                android:id="@+id/btn_submit"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_50sdp"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@drawable/booking_new_bg"
                                android:drawableEnd="@drawable/white_arrow_circle"
                                android:drawablePadding="@dimen/_10sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Submit"
                                android:textAllCaps="false"

                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>