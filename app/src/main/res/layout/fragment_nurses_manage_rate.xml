<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBF8F5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_doctorappoitment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/ll_mainlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:text="Hourly Rate"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Slot"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                                <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Amont (SAR)"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="4 Hours"
                                    android:id="@+id/tvTitleForPrice1"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:digits="0123456789"
                                    android:id="@+id/etForPrice1"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="8 Hours"
                                    android:id="@+id/tvTitleForPrice2"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:digits="0123456789"
                                    android:id="@+id/etForPrice2"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="12 Hours"
                                    android:id="@+id/tvTitleForPrice3"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:digits="0123456789"
                                    android:maxLines="1"
                                    android:id="@+id/etForPrice3"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="24 Hours"
                                    android:id="@+id/tvTitleForPrice4"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customview.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:maxLines="1"
                                    android:inputType="number"
                                    android:digits="0123456789"
                                    android:id="@+id/etForPrice4"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.rootscare.customview.MyCustomButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Save Hourly Rate"
                            android:textAllCaps="false"
                            android:id="@+id/btnSubmit1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />



                        <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:text="Slot Wise Rate(each 30 minutes)"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="#EBF8F5"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="Slot"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_10ssp" />

                            <com.rootscare.customview.MyEditTextView
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_comm_bg"
                                android:gravity="center"
                                android:hint="Price"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:id="@+id/etForPrice5"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <com.rootscare.customview.MyCustomButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginBottom="30dp"
                            android:text="Save Slot wise Rate"
                            android:textAllCaps="false"
                            android:id="@+id/btnSubmit2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>