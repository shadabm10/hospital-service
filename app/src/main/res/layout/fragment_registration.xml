<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/logo_with_name"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:id="@+id/ll_registration_setp_one"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">
                    <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rootscare_registration_userType"
                        android:hint="Select User Type"
                        android:textSize="@dimen/_12sdp"
                        android:drawableEnd="@drawable/down_arrow_white"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:padding="@dimen/_12sdp"
                        android:background="@drawable/login_edit_bg"
                        />
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="text"
                        android:maxLength="20"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLength="20"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLength="10"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of Birth"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <RadioGroup
                            android:id="@+id/radioYesOrNo"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            >
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="Male"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp"
                                />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:textSize="@dimen/_10ssp"

                                android:layout_marginStart="@dimen/_10sdp"
                                android:textColor="@color/white"
                                />
                        </RadioGroup>
                    </LinearLayout>

                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusabutton.MyNeusaBoldButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_rooscare_serviceprovider_registration_stepone_continue"
                        android:text="Continue"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/text_hint_color"
                        android:paddingBottom="@dimen/_5sdp"
                        android:drawableEnd="@drawable/btn"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/square_bg"
                        android:layout_marginTop="@dimen/_20sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_registration_setp_two"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Image"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_hint_color"
                            android:textColorHint="@color/text_hint_color"
                            android:background="@drawable/upload_text_bg"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                            android:layout_width="@dimen/_220sdp"
                            android:layout_height="wrap_content"
                            android:hint="Certificate"
                            android:id="@+id/txt_certificate"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_hint_color"
                            android:textColorHint="@color/text_hint_color"
                            android:background="@drawable/upload_text_bg"/>

                        <com.rootscare.customviews.neusabutton.MyNeusaBoldButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/txt_certificate"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/reg_add_more"
                            />
                    </RelativeLayout>

                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Qualification"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rootscare_login_userType"
                        android:hint="Passing Year"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:drawableEnd="@drawable/down_arrow_white"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:padding="@dimen/_12sdp"
                        android:background="@drawable/login_edit_bg"
                        />
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Institute"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusabutton.MyNeusaBoldButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_rooscare_serviceprovider_registration_steptwo_continue"
                        android:text="Continue"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/text_hint_color"
                        android:paddingBottom="@dimen/_5sdp"
                        android:drawableEnd="@drawable/btn"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/square_bg"
                        android:layout_marginTop="@dimen/_40sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/ll_registration_setp_three"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:hint="Description"
                        android:inputType="text"
                        android:gravity="start"
                        android:maxLength="20"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Experience"
                        android:inputType="text"
                        android:maxLength="20"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusatextview.MyNeusaMediumTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rootscare_registration_availableTime"
                        android:hint="Available Time"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:drawableEnd="@drawable/down_arrow_white"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:padding="@dimen/_12sdp"
                        android:background="@drawable/login_edit_bg"
                        />
                    <com.rootscare.customviews.neusaedittext.MyNeusaMediumEditTextview
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fees"
                        android:inputType="number"
                        android:maxLength="10"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/text_hint_color"
                        android:textColorHint="@color/text_hint_color"
                        android:background="@drawable/login_edit_bg"/>
                    <com.rootscare.customviews.neusabutton.MyNeusaBoldButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_rooscare_serviceprovider_registration_submit"
                        android:text="Submit"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/text_hint_color"
                        android:paddingBottom="@dimen/_5sdp"
                        android:drawableEnd="@drawable/btn"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/square_bg"
                        android:layout_marginTop="@dimen/_40sdp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>