<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdview_requested_appointment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_mainlayout"
            android:orientation="vertical">

            <com.rootscare.customview.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/txt_requested_appointment"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:textColor="@color/txt_color"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:text="Patient Name : "/>
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/txt_requested_patient_name"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/txt_color"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:text="Booking Date : "/>

                <com.rootscare.customview.MyTextView
                    android:id="@+id/txt_requested_booking_date"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:text="Appointment Time : "/>
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/txt_requested_time"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/txt_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:text="Appointment Date : "/>
                <com.rootscare.customview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/txt_requested_appointment_date"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/txt_color"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/appiontment_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_margin="@dimen/dimen_10dp">
                    <com.rootscare.customview.MyCustomButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/btn_accept"
                        android:text="Accept"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_green_btn"
                        android:layout_alignParentStart="true"/>

                    <com.rootscare.customview.MyCustomButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Reject"
                        android:id="@+id/btn_reject"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/rounded_white_btn"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>