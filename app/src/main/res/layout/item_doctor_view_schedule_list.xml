<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.rootscare.customview.MyTextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Slot"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_10ssp"
                    android:textColorHint="@color/txt_color"
                    android:gravity="center"
                    android:background="@drawable/edit_comm_bg"/>
                <com.rootscare.customview.MyTextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Start Time"
                    android:text="04:00 PM"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_10ssp"
                    android:textColorHint="@color/txt_color"
                    android:gravity="center"
                    android:background="@drawable/edit_comm_bg"/>
                <com.rootscare.customview.MyTextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                android:hint="End time"
                    android:text="07:00 PM"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_10ssp"
                android:textColorHint="@color/txt_color"
                android:gravity="center"
                android:background="@drawable/edit_comm_bg"/>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
              >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp">
                    <com.rootscare.customview.MyCustomButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Remove"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_green_btn"
                        android:layout_alignParentStart="true"/>

                    <com.rootscare.customview.MyCustomButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Cancel"
                        android:id="@+id/btn_cancel"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_blue_btn"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>